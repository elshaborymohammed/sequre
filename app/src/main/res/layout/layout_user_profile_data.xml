<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_relationship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/relationship"
        android:tag="relationship">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/App.Widget.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <include
        layout="@layout/layout_user_main_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/gender"
        android:paddingTop="8dp"
        android:tag="gender"
        app:boxCollapsedPaddingTop="0dp"
        app:endIconDrawable="@drawable/ic_chevron_down"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/colorAccent">

        <com.google.android.material.textview.MaterialAutoCompleteTextView
            style="@style/App.Widget.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            android:includeFontPadding="true"
            android:inputType="none"
            android:paddingTop="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_birth_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="true"
        android:hint="@string/date_of_birth"
        android:paddingTop="8dp"
        android:tag="birth1"
        app:boxCollapsedPaddingTop="0dp"
        app:endIconDrawable="@drawable/ic_date"
        app:endIconMode="custom"
        app:endIconTint="@color/colorAccent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/App.Widget.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>