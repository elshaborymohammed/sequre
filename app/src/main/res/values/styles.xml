<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="textInputStyle">@style/App.Widget.TextInputLayout</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="bottomNavigationStyle">@style/App.Widget.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/App.Widget.CardView</item>
    </style>

    <style name="ButtonAppearanceBoarded" parent="">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="App.Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/se_bottom_navigation</item>
        <item name="itemTextColor">@color/se_bottom_navigation</item>
    </style>

    <style name="App.Widget.NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/se_bottom_navigation</item>
        <item name="itemTextColor">@color/se_bottom_navigation</item>
    </style>

    <style name="App.Widget.Button.Main" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/se_enable_disable</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="App.Widget.Button.Main.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="App.Widget.TextView.Title" parent="Widget.MaterialComponents.TextView" />

    <style name="App.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorTextAppearance">@style/App.TextAppearance.Error</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="endIconMode">clear_text</item>
    </style>


    <style name="App.Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">8dp</item>
        <!--        <item name="strokeColor">@color/border</item>-->
        <!--        <item name="strokeWidth">@dimen/stroke_width</item>-->
    </style>

    <style name="App.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="App.TextAppearance.Toolbar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.TextAppearance.Error" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
