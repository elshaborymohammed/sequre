<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="listPreferredItemHeight">16dp</item>
        <item name="listPreferredItemHeightSmall">48dp</item>
        <item name="listPreferredItemHeightLarge">32dp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>

        <item name="android:datePickerDialogTheme">@style/App.Widget.DatePicker</item>
        <item name="android:textViewStyle">@style/App.TextAppearance.Body</item>

        <item name="textInputStyle">@style/App.Widget.TextInputLayout</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="bottomNavigationStyle">@style/App.Widget.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/App.Widget.CardView</item>
        <item name="materialButtonStyle">@style/App.Widget.Button</item>
        <item name="preferenceStyle">@style/App.Widget.Preference.EditTextPreference</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ll_splash_screen</item>
    </style>

    <style name="App.Widget.DatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <!--calendar background-->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">#000000</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <!--header background-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--selected day-->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ButtonAppearanceBoarded" parent="">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="App.Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/se_bottom_navigation</item>
        <item name="itemTextColor">@color/se_bottom_navigation</item>
    </style>

    <style name="App.Widget.NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/se_bottom_navigation</item>
        <item name="itemTextColor">@color/se_bottom_navigation</item>
    </style>

    <style name="App.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/se_enable_disable_button</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="App.Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="App.Widget.TextView.Title" parent="Widget.MaterialComponents.TextView" />

    <style name="App.Widget.Preference.EditTextPreference" parent="Preference.DialogPreference.EditTextPreference" />

    <style name="App.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/App.TextAppearance.Hint</item>
        <item name="errorTextAppearance">@style/App.TextAppearance.Error</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="App.Widget.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <style name="App.Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">8dp</item>
        <!--        <item name="strokeColor">@color/border</item>-->
        <!--        <item name="strokeWidth">@dimen/stroke_width</item>-->
    </style>

    <style name="App.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="fontWeight">100</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="App.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="App.TextAppearance.Toolbar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.TextAppearance.Error" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>

    <style name="App.TextAppearance.Hint" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="App.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
