<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>

        <item name="android:datePickerDialogTheme">@style/App.Widget.DatePicker</item>

        <item name="textInputStyle">@style/App.Widget.TextInputLayout</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="materialCardViewStyle">@style/App.Widget.CardView</item>
        <item name="materialButtonStyle">@style/App.Widget.Button</item>
        <item name="preferenceStyle">@style/App.Widget.Preference.EditTextPreference</item>
        <item name="progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
        <item name="android:textViewStyle">@style/App.Widget.TextView</item>

        <item name="titleTextAppearance">@style/App.TextAppearance.Title</item>
        <item name="subtitleTextAppearance">@style/App.TextAppearance.Subtitle2</item>

        <item name="textAppearanceSubtitle1">@style/App.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/App.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/App.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/App.TextAppearance.Body2</item>
        <item name="textAppearanceCaption">@style/App.TextAppearance.Caption</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Caption</item>
        <item name="hintTextAppearance">@style/App.TextAppearance.Hint</item>
        <item name="errorTextAppearance">@style/App.TextAppearance.Error</item>
        <item name="helperTextTextAppearance">@style/App.TextAppearance.Helper</item>
        <item name="textAppearanceButton">@style/App.TextAppearance.Button</item>
        <item name="tabTextAppearance">@style/App.TextAppearance.Tab</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/ll_splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.Widget.DatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <!--calendar background-->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">#000</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <!--header background-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--selected day-->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ButtonAppearanceBoarded" parent="">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <!--  region Widget -->
    <style name="App.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/se_enable_disable_button</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Button</item>
    </style>

    <style name="App.Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Button</item>
    </style>

    <style name="App.Widget.Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/se_toggle_button_tint</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Button</item>
    </style>

    <style name="App.Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Button</item>
    </style>

    <style name="App.Widget.Preference.EditTextPreference" parent="Preference.DialogPreference.EditTextPreference" />

    <style name="App.Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="autoSizeTextType">none</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Caption</item>
    </style>

    <style name="App.Widget.TextView.Title" parent="Widget.MaterialComponents.TextView" />

    <style name="App.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="placeholderTextAppearance">@style/App.TextAppearance.Caption</item>
        <item name="hintTextAppearance">@style/App.TextAppearance.Hint</item>
        <item name="errorTextAppearance">@style/App.TextAppearance.Error</item>
    </style>

    <style name="App.Widget.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Caption</item>
        <item name="autoSizeTextType">none</item>
    </style>


    <style name="App.Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">8dp</item>
    </style>
    <!-- endregion -->

    <!--  region Text Appearance -->
    <style name="App.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#007DC3</item>
        <item name="android:color">#007DC3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">#007DC3</item>
        <item name="android:color">#007DC3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#000</item>
        <item name="android:color">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Hint" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Error" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Helper" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="App.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Button.Toggle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto_medium</item>

    </style>

    <style name="App.TextAppearance.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="App.TextAppearance.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!-- endregion -->
</resources>
