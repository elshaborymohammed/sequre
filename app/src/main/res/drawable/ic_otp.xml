<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?colorError" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Space contains text -->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?attr/colorAccent" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?attr/colorAccent" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!--Space contains text and not focused -->
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?attr/colorAccent" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#70707073" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="2dp" android:color="#70707073" />
        </shape>
    </item>

</selector>