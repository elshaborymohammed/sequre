<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ocs.sequre.presentation.ui.activity.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_auth_graph"
            app:destination="@id/auth_navigation"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_splashFragment_to_navigationFragment"
            app:destination="@id/navigationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
    </fragment>

    <navigation
        android:id="@+id/auth_navigation"
        app:startDestination="@id/auth_graph">

        <include app:graph="@navigation/auth_graph" />
        <action
            android:id="@+id/action_global_navigationFragment"
            app:destination="@id/navigationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </navigation>

    <fragment
        android:id="@+id/navigationFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.NavigationFragment"
        android:label="NavigationFragment"
        tools:layout="@layout/fragment_navigation">

        <action
            android:id="@+id/action_navigationFragment_to_secondOpinionFragment"
            app:destination="@id/secondOpinionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_navigationFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/secondOpinionFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.SecondOpinionFragment"
        android:label="SecondOpinionFragment"
        tools:layout="@layout/fragment_second_opinion" />

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" />

    <include app:graph="@navigation/menu_graph" />
</navigation>