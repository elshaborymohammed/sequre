<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    android:label="Home Graph"
    app:startDestination="@id/navigationFragment">

    <fragment
        android:id="@+id/navigationFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.NavigationFragment"
        android:label="NavigationFragment"
        tools:layout="@layout/fragment_navigation">

        <action
            android:id="@+id/action_navigationFragment_to_secondOpinionFragment"
            app:destination="@id/secondOpinionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_navigationFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/secondOpinionFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.SecondOpinionFragment"
        android:label="SecondOpinionFragment"
        tools:layout="@layout/fragment_second_opinion" />

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.ocs.sequre.presentation.ui.fragment.navigation.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" />

    <include app:graph="@navigation/menu_graph" />
</navigation>